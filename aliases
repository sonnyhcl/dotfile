alias k="kubectl"
alias kg="kubectl get -o wide -A"
alias kgp="kubectl get -o wide -A pod"
alias kes="kubectl port-forward -n elasticsearch-oss svc/catalog-es-oss-master 9200:9200"
alias kprometheus="k port-forward svc/prometheus -n istio-system 9090:9090"
alias kgrafana="k port-forward svc/grafana -n istio-system 3000:3000"

alias clhu="kubectl config use-context clhuaks"
